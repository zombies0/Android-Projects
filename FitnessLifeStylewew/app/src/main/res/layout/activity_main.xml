<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fit_back_img"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1E737373">

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="637dp"

            android:background="#79000000"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:background="#00000000"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/fit_logo_img"
                app:tint="#FF3177" />

            <Button
                android:id="@+id/button"
                android:layout_width="290dp"
                android:layout_height="68dp"
                android:layout_margin="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_gradient"
                android:text="@string/login"
                android:textSize="24sp"
                app:backgroundTint="#FA2F76" />

            <Button
                android:id="@+id/button2"
                android:layout_width="290dp"
                android:layout_height="68dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/btn_gradient"
                android:text="@string/register"
                android:textSize="24sp"
                app:backgroundTint="#FF367A" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginStart="102dp"
                android:layout_marginTop="20dp"
                android:text="@string/skip_and_continue"
                android:textColor="#FFCEEE"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>